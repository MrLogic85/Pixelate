<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sleepyduck.pixelate4crafting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sleepyduck.pixelate4crafting.view.color.ColorPalettesActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.sleepyduck.pixelate4crafting.view.pattern.ListPatternActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.sleepyduck.pixelate4crafting.view.pattern.PatternActivity"
            android:label="@string/app_name" />
    </application>

</manifest>