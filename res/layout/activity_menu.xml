<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_100"
    android:orientation="vertical"
    tools:context="com.example.pixelate4craftign.MenuActivity" >

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_500"
        android:padding="@dimen/padding"
        android:text="@string/app_name"
        android:textColor="@color/white_100" />

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onPatternsClicked"
        android:padding="@dimen/padding"
        android:text="@string/patterns"
        android:textColor="@color/black_87" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/black_12" />

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onColourPalettesClicked"
        android:padding="@dimen/padding"
        android:text="@string/colour_palettes"
        android:textColor="@color/black_87" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/black_12" />

</LinearLayout>