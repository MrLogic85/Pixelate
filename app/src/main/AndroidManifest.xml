<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sleepyduck.pixelate4crafting">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <provider
            android:authorities="com.sleepyduck.pixelate4crafting"
            android:name=".model.DatabaseProvider"
            android:exported="false"/>

        <activity
            android:name=".control.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="image/*" />
            </intent-filter>
        </activity>

        <activity
            android:name=".control.PatternActivity"
            android:label="@string/app_name"
            android:parentActivityName=".control.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".control.MainActivity" />
        </activity>

        <activity
            android:name=".control.ChangeParametersActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".control.configuration.ConfigurationActivity"
            android:label="@string/app_name"
            android:theme="@style/MyAlertDialog" />

        <activity
            android:name=".control.configuration.ConfigurationImageActivity"
            android:label="@string/app_name"
            android:theme="@style/MyAlertDialog" />

        <activity
            android:name=".control.configuration.ConfigurationWidthActivity"
            android:label="@string/app_name"
            android:theme="@style/MyAlertDialog" />

        <activity
            android:name=".control.configuration.ConfigurationPixelsActivity"
            android:label="@string/app_name"
            android:theme="@style/MyAlertDialog" />

        <activity
            android:name=".control.configuration.ConfigurationNameActivity"
            android:label="@string/app_name"
            android:theme="@style/MyAlertDialog" />

        <activity
            android:name=".control.ChooseColorDialog"
            android:label="@string/app_name"
            android:theme="@style/MyAlertDialog.NoDim" />

    </application>

</manifest>
