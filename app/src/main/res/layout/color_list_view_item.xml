<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color_item_select"
    android:layout_width="@dimen/color_card_select"
    android:layout_height="@dimen/color_card_select"
    android:layout_margin="@dimen/padding_tiny"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/accent_a200"
    app:cardCornerRadius="@dimen/color_card_select_radius">

    <android.support.v7.widget.CardView
        android:id="@+id/color_item_color"
        android:layout_width="@dimen/color_card_color"
        android:layout_height="@dimen/color_card_color"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/color_card_color_radius"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/color_item_icon"
            android:layout_width="@dimen/color_card_icon"
            android:layout_height="@dimen/color_card_icon"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/color_card_color_radius"
            android:tint="#424242"
            app:cardElevation="0dp" />
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>