<?xml version="1.0" encoding="utf-8"?>
<com.sleepyduck.pixelate4crafting.view.SwipeCard xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/header"
        style="@style/TextViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"/>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_red_dark"
            android:padding="@dimen/padding_small"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_delete"/>

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_green_dark"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_action_done"/>

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_orange_dark"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_redo"/>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <com.sleepyduck.pixelate4crafting.view.RoundedImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/small_picture_size"
                android:layout_height="@dimen/small_picture_size"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_margin="@dimen/padding_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:gravity="center_vertical"
                    android:lines="1"
                    tools:text="Title"/>

                <GridLayout
                    android:id="@+id/pattern_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="10"
                    android:alignmentMode="alignBounds"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.sleepyduck.pixelate4crafting.view.SwipeCard>